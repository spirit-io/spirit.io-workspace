{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "node",
    "args": [
        "${workspaceRoot}/spirit.io/node_modules/typescript/bin/tsc"
    ],
    "echoCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Compile spirit.io",
            "suppressTaskName": true,
            "problemMatcher": "$tsc",
            "args": [
                "-p",
                "${workspaceRoot}/spirit.io/src"
            ]
        },
        {
            "taskName": "Compile spirit.io-mongodb-connector",
            "suppressTaskName": true,
            "problemMatcher": "$tsc",
            "args": [
                "-p",
                "${workspaceRoot}/spirit.io-mongodb-connector/src"
            ]
        },
        {
            "taskName": "Compile spirit.io-redis-connector",
            "suppressTaskName": true,
            "problemMatcher": "$tsc",
            "args": [
                "-p",
                "${workspaceRoot}/spirit.io-redis-connector/src"
            ]
        },
        {
            "taskName": "Compile spirit.io-admin-application",
            "suppressTaskName": true,
            "problemMatcher": "$tsc",
            "args": [
                "-p",
                "${workspaceRoot}/spirit.io-admin-application/src"
            ]
        },
        {
            "taskName": "Compile spirit.io-sample-application",
            "suppressTaskName": true,
            "problemMatcher": "$tsc",
            "args": [
                "-p",
                "${workspaceRoot}/spirit.io-sample-application/src"
            ]
        }
    ]
}